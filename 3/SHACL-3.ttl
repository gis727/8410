@prefix : <http://www.exemple.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix event: <http://purl.org/NET/c4dm/event.owl#> .


# 1: Tout joueur doit avoir:
#    - un username au format xsd:string de longeur comprise entre 4 et 6 caractères (inclusifs)
#    - une expérience au format xsd:nonNegativeInteger comprise entre 0 et 100
:PlayerShape
    a sh:NodeShape ;
    sh:targetClass :Player ;
    sh:property [
        sh:path :username ;
        sh:datatype xsd:string ;
        sh:minLength 4 ;
        sh:maxLength 6 ;
    ] ;
    sh:property [
        sh:path :experience ;
        sh:datatype xsd:nonNegativeInteger ;
        sh:minInclusive 0 ;
        sh:maxInclusive 100 ;
    ] ;


# 2: Tout joueur doit avoir l'accomplisment "Tutorial achievement".
    sh:property [
        sh:path :unlocked ;
        sh:hasValue :tutorial_acc ;
        sh:minCount 1 ;
    ] .


# 3: Tout jeux doit avoir:
#    - au moins 1 monnaie
#    - au moins 1 saison
#    - au moins 1 playing area
#    - exactement 1 genre
:GameShape
    a sh:NodeShape ;
    sh:targetClass :Game ;
    sh:property [ sh:path :hasCurrency ; sh:minCount 1 ; ] ;
    sh:property [ sh:path :hasSeason   ; sh:minCount 1 ; ] ;
    sh:property [ sh:path :hasPlayingArea  ; sh:minCount 1 ; ] ;
    sh:property [ sh:path :isOfGenre    ; sh:minCount 1 ; sh:maxCount 1 ; ] .


# 4: Seul les joueurs ayant une expérience d'au moins 20 (inclusif) peuvent effectuer un achat.
:BuyerShape
    a sh:NodeShape ;
    sh:property [
        sh:path :experience ;
        sh:minInclusive 20 ;
    ] .
:PurchaseShape
    a sh:NodeShape ;
    sh:targetClass :PurchaseEvent ;
    sh:property [
        sh:path event:agent ;
        sh:node :BuyerShape ;
    ] .


